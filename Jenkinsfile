pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'This is the build stage. Hello, World!'
            }
        }
        stage('Test') {
            steps {
                echo 'This is the test stage. Everything looks good.'
            }
        }
        stage('Deploy') {
            steps {
                echo 'This is the deploy stage. Deploying...'
            }
        }
    }
}
